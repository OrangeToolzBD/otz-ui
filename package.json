    "format": "eslint src/**/*.ts --fix"
  },
  "bin": {
    "otz-ui": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrangeToolzBD/otz-ui.git"
  },
  "directories": {
