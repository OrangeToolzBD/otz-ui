    "native",
    "react",
    "nodejs",
    "nextjs",
    "cli"
  ],
  "author": "Rezaul Karim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OrangeToolzBD/otz-ui/issues"
  },
  "homepage": "https://github.com/OrangeToolzBD/otz-ui#readme",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@react-native/typescript-config": "^0.77.1",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "eslint": "^9.19.0",
    "expo": "^52.0.35",
    "globals": "^15.14.0",
    "react": "^19.0.0",
    "react-native": "^0.77.1",
    "react-native-svg": "^15.11.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
